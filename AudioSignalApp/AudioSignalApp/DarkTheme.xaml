<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AudioSignalApp.DarkTheme" >
    <x:String x:Key="Theme">Dark</x:String>
    <Color x:Key="AppBackgroundColor">Black</Color>
    <Color x:Key="SettingTextColor">White</Color>
    <Color x:Key="fftSignalBackgroundColor">Black</Color>
    <Color x:Key="fftSignalLinesColor">Gray</Color>
    <Color x:Key="fftSignalColor">White</Color>
    <Color x:Key="freqMaxColor">Green</Color>
    <Color x:Key="fftFreqTextColor">Yellow</Color>
    <Color x:Key="fftFilterRectColor">#40ffffff</Color>
    <Color x:Key="spektrogrammBackgroundColor">Black</Color>
    <Color x:Key="fehlerTextColor">Yellow</Color>
    <Style x:Key="AppColorStyleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="Black"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="Margin" Value="6"/>
    </Style>
    <Style x:Key="AppColorStylePicker" TargetType="Picker">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="Black"/>
    </Style>
</ResourceDictionary>
