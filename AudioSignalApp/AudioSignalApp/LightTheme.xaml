<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AudioSignalApp.LightTheme" >
    <x:String x:Key="Theme">Light</x:String>
    <Color x:Key="AppBackgroundColor">Transparent</Color>
    <Color x:Key="SettingTextColor">Transparent</Color>
    <Color x:Key="fftSignalBackgroundColor">Azure</Color>
    <Color x:Key="fftSignalLinesColor">DarkGray</Color>
    <Color x:Key="fftSignalColor">Black</Color>
    <Color x:Key="freqMaxColor">LightGreen</Color>
    <Color x:Key="fftFreqTextColor">DarkBlue</Color>
    <Color x:Key="fftFilterRectColor">#30000000</Color>
    <Color x:Key="spektrogrammBackgroundColor">Azure</Color>
    <Color x:Key="fehlerTextColor">DarkBlue</Color>
    <Style x:Key="AppColorStyleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="Margin" Value="6"/>
    </Style>
    <Style x:Key="AppColorStylePicker" TargetType="Picker">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
</ResourceDictionary>
